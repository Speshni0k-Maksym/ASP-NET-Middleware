@model ASP_NET_Middleware.Models.LoginModel
@{
    ViewData["Title"] = "Account Page";
}
<h2 class="mb-3">Login</h2>
<form method="post" action="/Account/Login" class="row g-3">
    <div class="col-md-6">
        <label class="form-label" for="Username">Username</label>
        <input id="Username" name="Username" class="form-control" value="@Model?.Username" />
    </div>
    <div class="col-md-6">
        <label class="form-label" for="Password">Password</label>
        <input id="Password" name="Password" type="password" class="form-control" />
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Log in</button>
        <a class="btn btn-link" href="/">Cancel</a>
    </div>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="col-12 text-danger mt-2">Invalid credentials</div>
    }
</form>