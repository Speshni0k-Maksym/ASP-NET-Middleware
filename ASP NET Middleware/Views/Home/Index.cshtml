@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="mb-4">Student App</h1>
    <div class="d-flex justify-content-center gap-3">
        <a class="btn btn-primary" href="/Students/Create">Add Student</a>
        <a class="btn btn-secondary" href="/Students/Export">Export Students</a>
        <a class="btn btn-info" href="/Wishes/Write">Write Wish</a>
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <form method="post" action="/Account/Logout" class="d-inline">
                <button type="submit" class="btn btn-outline-danger">Logout (@User.Identity.Name)</button>
            </form>
        }
        else
        {
            <a class="btn btn-outline-success" href="/Account/Login">Login</a>
        }
    </div>
    @if (TempData["LastWish"] is string last)
    {
        <div class="mt-4 alert alert-success" role="alert">@last</div>
    }
</div>